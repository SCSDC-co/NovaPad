<Window
    Background="#181616"
    Height="700"
    Icon="/Assets/avalonia-logo.ico"
    MinHeight="350"
    MinWidth="700"
    Title="NovaPad"
    Width="1400"
    WindowStartupLocation="CenterScreen"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="src.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:src.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.ColumnSpan="2"
            Height="40"
            Margin="5,5"
            Orientation="Horizontal">
            <Button Classes="Button-1" Content="SAVE" />
            <Button Classes="Button-1" Content="SAVE AS" />
        </StackPanel>


        <Grid
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border
                Classes="Border-1"
                Grid.Column="0"
                Margin="10,0,0,0"
                Padding="10,6"
                Width="50">
                <ScrollViewer
                    HorizontalScrollBarVisibility="Hidden"
                    IsHitTestVisible="False"
                    Name="LineNumbersScroll"
                    VerticalScrollBarVisibility="Hidden">
                    <TextBlock
                        FontWeight="Bold"
                        Foreground="#74966a"
                        Name="LineNumbersTextBlock"
                        Text="{Binding LineNumbers}"
                        TextAlignment="Right"
                        VerticalAlignment="Top" />
                </ScrollViewer>
            </Border>

            <TextBox
                Classes="TextBox-1"
                Grid.Column="1"
                Name="MainTextBox"
                Text="{Binding Text, Mode=TwoWay}" />
        </Grid>
    </Grid>
</Window>
